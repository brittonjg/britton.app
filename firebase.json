{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": [
    {
      "target": "beta",
      "public": "build",
      "headers": [
        {
          "source": "**/*.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0, no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "**/*.@(js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        },
        {
          "source": "**/*.@(css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3500"
            }
          ]
        },
        {
          "source": "**/service-worker.js",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0, no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|eot|otf|ttf|ttc|woff)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3300"
            }
          ]
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "prod",
      "public": "build",
      "headers": [
        {
          "source": "**/*.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0, no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "**/*.@(js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        },
        {
          "source": "**/*.@(css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3500"
            }
          ]
        },
        {
          "source": "**/service-worker.js",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0, no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|eot|otf|ttf|ttc|woff)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=3300"
            }
          ]
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}